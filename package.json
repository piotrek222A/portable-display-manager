{
  "name": "portable-display-manager",
  "version": "1.0.0",
  "main": "electron/main.js",
  "scripts": {
    "start-server": "node server/server.js",
    "start-electron": "electron electron/main.js",
    "start": "concurrently \"npm run start-server\" \"npm run start-electron\"",
    "predist": "node tools/generate-config.js",
    "dist": "electron-builder"
  },
  "dependencies": {
    "body-parser": "^2.2.0",
    "bonjour": "^3.5.0",
    "castv2-client": "^1.2.0",
    "concurrently": "^8.2.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "express": "^4.21.2",
    "jsonwebtoken": "^9.0.2",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1"
  },
  "devDependencies": {
    "electron": "^26.6.10",
    "electron-builder": "^24.6.0"
  },
  "build": {
    "appId": "com.example.remotedisplay",
    "productName": "portable-display-manager",
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "electron/icon.ico"
    },
    "directories": {
      "output": "dist"
    }
  }
}
